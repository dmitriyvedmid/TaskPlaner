<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/list_item_task_solved_check_box"
        android:padding="4dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_task_title_text_view"
        android:layout_toStartOf="@id/list_item_task_solved_check_box"
        android:textStyle="bold"
        android:padding="4dp"
        android:text="@string/task_title_label"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_task_date_text_view"
        android:layout_toStartOf="@id/list_item_task_solved_check_box"
        android:layout_below="@id/list_item_task_title_text_view"
        android:padding="4dp"
        android:text="@string/task_date_label"/>
</RelativeLayout>